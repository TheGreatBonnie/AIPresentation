{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "strictNullChecks": true,
    "outDir": "dist"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "paths": {
    "@/*": ["./src/*"],
    "@copilotkit/react-core/*": ["../packages/react-core/*"],
    "@copilotkit/react-ui/*": ["../packages/react-ui/*"],
    "@copilotkit/react-textarea/*": ["../packages/react-textarea/*"]
  }
}
